<div class="header">
  <h1 class="header-text">
    Burger__Time
  </h1>
</div>

<div class="container">
<div class="not-devoured">
  <h2 class="title">Eatable</h2>

    <ul class="not-eaten-burgers">
      {{#each burgers}}
        {{#unless devouerd}}
          {{> burgers/burger-block devoured=true}}
        {{/unless}}
      {{/each}}
    </ul>
</div>

<div class="not-eatable">
  <h2 class="title">Devoured</h2>
    
    <ul class="eaten-burgers">
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=false}}
        {{/if}}
      {{/each}}
    </ul>
</div>

<div class="add">
  <form class="new-burger">
    <h2 class="title">Add a Burger</h2>
    <div class="input-form">
        <input id="burger_name" type="text" id="burger_name" name="burger_name" placeholder="Enter Burger Name">
    </div>
   <div class="choice-devour">
        <input class="choice" type="radio" name="devoured" value="1"> Devoured
        <input class="choice" type="radio" name="devoured" value="0"> Eatable
  </div> 

    <button class="addBtn" type="submit">Submit!</button>
  </form>
</div>
</div>
