<h1>Burger__Time</h1>

<h2>Eatable</h2>

<ul>
  {{#each burgers}}
    {{#unless devouerd}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured</h2>

<ul>
  {{#each burgers}}
    {{#if sleepy}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Cat</h2>
<form class="new-burger">

  <div class="form-group">
    <label for="name">Add New Burger</label>
    <input type="text" id="name" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured<br>
    <input type="radio" name="devoured" value="0"> Eatable
  </div>

  <button type="submit">Submit!</button>
</form>
